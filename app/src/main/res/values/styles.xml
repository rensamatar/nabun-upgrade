<resources>

  <style name="AppTheme" parent="AppTheme.Base"/>

  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <!-- Custom TabLayout -->
  <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
    <item name="android:background">@color/colorPrimaryDark</item>
    <item name="tabMaxWidth">@dimen/tab_max_width</item>
    <item name="tabIndicatorColor">?attr/colorAccent</item>
    <item name="tabIndicatorHeight">2dp</item>
    <item name="tabPaddingStart">12dp</item>
    <item name="tabPaddingEnd">12dp</item>
    <item name="tabBackground">?attr/selectableItemBackground</item>
    <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    <item name="tabSelectedTextColor">?android:textColorPrimary</item>
  </style>

  <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">14dp</item>
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="textAllCaps">false</item>
  </style>

  <!-- Detail page -->
  <style name="DetailTitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginTop">@dimen/dimens_20dp</item>
    <item name="android:layout_marginBottom">@dimen/dimens_20dp</item>
    <item name="android:textSize">@dimen/material_text_headline</item>
  </style>
  <style name="DetailListItem">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:paddingTop">@dimen/dimens_10dp</item>
    <item name="android:paddingBottom">@dimen/dimens_10dp</item>
  </style>
  <style name="DetailListItemTitle">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textSize">@dimen/material_text_subhead</item>
  </style>
  <style name="DetailListItemValue">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">right</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textSize">@dimen/material_text_subhead</item>
  </style>

  <!-- FloatingAction button -->
  <style name="FabStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">@dimen/spacing_large</item>
    <item name="android:src">@drawable/icon_2</item>
    <item name="borderWidth">0dp</item>
    <item name="elevation">6dp</item>
    <item name="pressedTranslationZ">12dp</item>
    <item name="rippleColor">@android:color/white</item>
  </style>

</resources>
