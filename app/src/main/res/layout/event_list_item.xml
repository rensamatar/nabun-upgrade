<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/list_item_height"
             android:id="@+id/frame_layout"
             android:background="@color/eggplant">

  <ImageView
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:adjustViewBounds="true"
    android:contentDescription="@null"
    android:maxHeight="?android:attr/listPreferredItemHeight"
    android:maxWidth="?android:attr/listPreferredItemHeight"
    android:scaleType="centerCrop"/>

  <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
    <ImageView
      android:id="@+id/image_view_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:contentDescription="@null"
      android:src="@drawable/icon_3"/>
    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="Fujitsu General"
      android:textColor="#ffffff"
      android:textAlignment="center"
      android:textSize="40dp"/>
    <TextView
      android:id="@+id/summary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="Making Air condition"
      android:textColor="#ffffff"
      android:textAlignment="center"
      android:textSize="20dp"/>
  </LinearLayout>

</FrameLayout>